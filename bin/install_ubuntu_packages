cd ~

# Install packages
sudo apt install vim
sudo apt install git
sudo apt install redshift
sudo apt instal sxhkd

# Set up dotfiles
git clone git@github.com:asandridge/dotfiles.git
ln -s dotfiles/.vimrc ~/.vimrc
ln -s dotfiles/.bashrc ~/.bash_aliases
ln -s dotfiles/.bash_profile ~/.bash_profile
ln -s dotfiles/.xinitrc ~/.xinitrc
ln -s dotfiles/.xprofile ~/.xprofile
ln -s dotfiles/.xmodmap ~/.xmodmap
mkdir -p ~/.config/sxhkd/
ln -s dotfiles/.sxhkdrc ~/.config/sxhkd/sxhkdrc

# Initialize dotifles
git clone https://github.com/VundleVim/Vundle.vim.git ~/.vim/bundle/Vundle.vim
vimplug
source .bash_aliases

# st
# dwm
# In /usr/share/X11/xorg.conf.d/40-libinput.conf
#         Identifier "libinput pointer catchall"
#         Option "NaturalScrolling" "true"
# uninstall display managers

# Install Brave
sudo apt install apt-transport-https curl gnupg

curl -s https://brave-browser-apt-release.s3.brave.com/brave-core.asc | sudo apt-key --keyring /etc/apt/trusted.gpg.d/brave-browser-release.gpg add -

echo "deb [arch=amd64] https://brave-browser-apt-release.s3.brave.com/ stable main" | sudo tee /etc/apt/sources.list.d/brave-browser-release.list

sudo apt update

sudo apt install brave-browser
